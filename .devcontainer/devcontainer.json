{
	"name": "SchedSim",
	"build": {
		"context": "..",
		"dockerfile": "../Dockerfile"
	},
	"forwardPorts": [
		"10000:8888"
	],
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
				"ms-vscode.cpptools",
				"GitHub.copilot"
			],
			"settings": {
				"python.formatting.provider": "black",
				"python.formatting.blackArgs": [
					"--line-length",
					"120"
				],
				"editor.formatOnSave": true
			}
		}
	}
}